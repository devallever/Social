<?xml version="1.0" encoding="utf-8"?>
<!-- shape如果不声明形状则默认为正方形 -->
<shape xmlns:android="http://schemas.android.com/apk/res/android" >

    <!-- 圆角，你也可以对不同的角设置不同的数值 -->
    <corners android:radius="5.0dp" />


    <!-- 形状的填充色 -->
    <solid android:color="@color/white" />


    <!-- 边框宽度和颜色 -->
    <stroke
        android:width="1dp"
        android:color="@color/colorPrimary" />


</shape>

